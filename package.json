{
  "name": "commit-msg",
  "version": "1.0.0",
  "description": "Git commit-msg hook using best practices",
  "main": "./lib/commit-message.js",
  "scripts": {
    "hook": "node lib/setup",
    "hook-uninstall": "node lib/setup uninstall",
    "postinstall": "npm run hook",
    "preuninstall": "npm run hook-uninstall",
    "test": "mocha --reporter spec --slow 5 --check-leaks"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clns/node-commit-msg"
  },
  "keywords": [
    "git",
    "hook",
    "commit-msg",
    "commit message",
    "COMMIT_EDITMSG",
    "parser",
    "validator",
    "best practices"
  ],
  "author": "Calin Seciu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clns/node-commit-msg/issues"
  },
  "homepage": "https://github.com/clns/node-commit-msg",
  "devDependencies": {
    "mocha": "^2.2.4"
  },
  "dependencies": {
    "chalk": "^1.0.0"
  }
}
