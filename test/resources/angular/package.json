{
  "description": "This is a sample config based on angular's git commit guidelines https://github.com/angular/angular.js/blob/master/CONTRIBUTING.md#commit",
  "commitMsg": {
    "invalidCharsInSubject": false,
    "types": {
      "allowedTypes": "^(feat|fix|docs|style|refactor|perf|test|chore)(\\([^)]+\\))?: ",
      "required": true
    },
    "strictTypes": {
      "invalidTypes": "(^[^: ]+: )"
    },
    "capitalized": {
      "capital": false
    },
    "subjectPreferredMaxLineLength": false,
    "subjectMaxLineLength": {
      "length": 100
    },
    "bodyMaxLineLength": {
      "length": 100
    },
    "references": {
      "github": {
        "user": "angular",
        "repo": "angular.js"
      }
    }
  }
}
